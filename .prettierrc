{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "plugins": ["prettier-plugin-css-order", "prettier-plugin-prisma"],
  "cssDeclarationSorterOrder": "smacss",
  "overrides": [
    {
      "files": "*.prisma",
      "options": {
        "parser": "prisma"
      }
    }
  ]
}
