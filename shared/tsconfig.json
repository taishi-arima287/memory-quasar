{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@memory-quasar/ui": ["./ui"],
      "@/*": ["./ui/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.css"],
  "exclude": ["node_modules"]
} 